// Converted from Particle system: advancedLodSystem
// Original PU used smooth LOD with two techniques:
//   - LOD0: Entity renderer (Barrel.mesh) with material Particle/Barrel_02
//   - LOD1: Billboard renderer with material Particle/Barrel_01
//
// ParticleFX2 scripts don't have an equivalent to Particle's smooth_lod / lod_distances.
// This conversion keeps the original system name and uses the Billboard technique (PU lod_index = 1).

particle_system Particle/advancedLodSystem
{
	quota           	100
	material        	Particle/advancedLodSystem
	particle_width  	0.96
	particle_height 	1.26
	cull_each       	true

	renderer        	billboard
	sorted          	true
	local_space     	false
	billboard_type  	point

	emitter Box
	{
		angle            	25
		emission_rate    	5

		// PU: time_to_live dyn_random { min 2 max 6 }
		time_to_live     	4
		time_to_live_min 	2
		time_to_live_max 	6

		// PU: velocity 2.4
		velocity         	2.4
		velocity_min     	2.4
		velocity_max     	2.4

		direction        	0 1 0

		// PU: box_width/height/depth
		width            	3
		height           	3
		depth            	3
	}
}

