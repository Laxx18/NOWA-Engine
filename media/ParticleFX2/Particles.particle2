// Note: Some Particle features (sphere renderer, dynamic oscillation,
// curved interpolation, observers) are not directly supported in ParticleFX2.
// This is the closest approximation using standard ParticleFX2 features.

// Technique 1: Streak particles (originally sphere renderer - using point billboard)
particle_system Particle/Atomicity_Streaks
{
    material        Particle/Streak_02
    particle_width  2.4
    particle_height 2.4
    cull_each       false
    quota           40
    billboard_type  point

    // Point emitter for streaks
    // Original had oscillating emission_rate (20 +/- 20 at 0.4Hz)
    // Using average value of 20
    emitter Point
    {
        angle           360
        emission_rate   20
        time_to_live    1.3
        direction       0 0 0
        velocity        0
    }

    // Colour affector - interpolates through blue -> orange -> black
    // Original time_colour: 0->blue, 0.3->blue, 0.6->orange, 1->black
    // ParticleFX2 ColourFader2 provides two-phase colour change
    affector ColourInterpolator
    {
        time0           0
        colour0         0.27 0.3 0.74 1

        time1           0.3
        colour1         0.27 0.3 0.74 1

        time2           0.6
        colour2         0.43 0.28 0.14 1

        time3           1
        colour3         0 0 0 1
    }

    // Rotation affector
    // Original: curved linear from 3 rad/s at t=0 to 0.2 rad/s at t=1
    // Using average rotation speed (~1.6 rad/s â‰ˆ 90 deg/s)
    affector Rotator
    {
        rotation_speed_range_start  10
        rotation_speed_range_end    180
        rotation_range_start        0
        rotation_range_end          360
    }

    // Scale affector
    // Original: curved linear 12 at t=0, 12 at t=0.8, 24 at t=1
    // Approximating with linear scale: particles grow from 2.4 to ~28.8 (12x)
    // then burst to 57.6 (24x) at end - using average growth
    affector Scaler
    {
        rate            18
    }
}

// Technique 2: Flare particles (outer flares)
particle_system Particle/Atomicity_Flares
{
    material        Particle/Flare_04
    particle_width  2.5
    particle_height 2.5
    cull_each       false
    quota           50
    billboard_type  point

    // Outer flare emitter - faster velocity, spread out
    emitter Point
    {
        angle           360
        emission_rate   20
        time_to_live    1
        direction       0 1 0
        velocity_min    6
        velocity_max    6
        // Original had random dimensions 0.6 to 4.5
        // Using midpoint, actual size variation via width/height
    }

    // Core flare emitter - slower velocity, stays near center
    emitter Point
    {
        angle           360
        emission_rate   20
        time_to_live    1
        direction       0 1 0
        velocity_min    0.9
        velocity_max    0.9
        // Original had random dimensions 1.2 to 4.5
    }

    // Colour affector - red fading to black
    // Original time_colour: 0->red, 0.6->red, 1->black
    affector ColourInterpolator
    {
        time0           0
        colour0         1 0.3 0.3 1

        time1           0.6
        colour1         1 0.3 0.3 1

        time2           1
        colour2         0 0 0 1
    }
}

// Combined system alternative - single system with both effects
// Use this if you want a single particle system that combines both techniques
